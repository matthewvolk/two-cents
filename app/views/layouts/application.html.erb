<!-- this file shows up on every page of our site -->
<!DOCTYPE html>
<html>
  <head>
    <title>TwoCents | Instant Tips From Professional Developers.</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
          <%= link_to root_path, class: "navbar-brand" do %>
            <i class="fa fa-hand-scissors-o" aria-hidden="true"></i>
             TwoCents
          <% end %>
          
        </div>
        
        <div class "navbar-collapse collapse" id="main-nav-collapse">
          <div class="nav navbar-nav navbar-right text-center">
            
            <% if user_signed_in? %>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn btn-sm" %>
            <% else %>
              <%= link_to "Log In", new_user_session_path, class: "btn btn-default navbar-btn btn-sm" %>
            <% end %>
          </div>
          
          <ul class="nav navbar-nav navbar-left text-center">
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact", new_contact_path %></li>
          </ul>
          
        </div><!-- /.navbar-collapse -->
      </div><!-- end container -->
    </nav>
    
    <div class="container">
      <% flash.each do |type, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{type}" %>
      <% end %>
    </div>
    
    <%= yield %> <!-- rails pulls in code from other /view/ files here -->
  
    <!--<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>-->

  
  </body>
  
</html>
